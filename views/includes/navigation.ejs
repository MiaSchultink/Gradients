<body>
    <script src="https://kit.fontawesome.com/9eb54e81b4.js" crossorigin="anonymous"></script>
<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item"><a class = "<%= path === '/' ? 'active' : ''%>" href="/"><i class="fas fa-home"></i></li>
           
                
                 <% if (locals.isLoggedIn == true) { %>
                    <ul class="main-header__item-list">
                    <li class="main-header__item"><a  class = "<%= path === '/gradient/create' ? 'active' : ''%>"href="/gradient/create">Gradient-creation</a></li>
                    <li class="main-header__item"><a  class = "<%= path === '/gradient/library' ? 'active' : ''%>"href="/gradient/library">Gradient-library</a></li>
                    <li class="main-header__item"><a  class = "<%= path === '/users/favorites' ? 'active' : ''%>"href="/users/favorites">Favorites</a></li>
                    <li class="main-header__item"><a class = "<%= path === '/users/profile' ? 'active' : ''%>" href="/users/profile/<%=locals.user._id%>"> <i class="fas fa-user"></i></a></li>
                    </ul>
                </ul>
                    <ul class="main-header__item-list">
                    <il class="main-header__item"><form action="/users/logout" method="post"><input type ="hidden" name ="_csrf" value= '<%=csrfToken%>'><button class="nav_button" type="submit">Logout</button></form></il>
                    <% if (locals.isAdmin == true) { %>
                        <li class="main-header__item"><a  class = "<%= path === '/admin/users' ? 'active' : ''%>"href="/admin/users">Users</a></li>
                    <% } %>
                </ul> 
           
                <% } else { %> 
                    <ul class="main-header__item-list">
                    <li class="main-header__item"><a  class = "<%= path === '/users/login' ? 'active' : ''%>"href="/users/login">Login</a></li>
                    <li class="main-header__item"><a class = "<%= path === '/users/sign-up' ? 'active' : ''%>" href="/users/sign-up">Sign-up</a></li>
                    </ul> 
                 <% } %> 

        
    </nav>
</header>